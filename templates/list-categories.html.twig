{% extends 'base.html.twig' %}

{% block main %}
    <section class="articles-container">
        {% for category in categories %}
            <a href="{{ path('detail-category', {'id' : category.id}) }}"><article class="article-preview" style="background-color: {{ category.color }};">
            <h2 class="article-title">{{ category.title }}</h2>
            </article></a>
        {% endfor %}
    </section>
{% endblock main %}