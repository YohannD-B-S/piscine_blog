{% extends 'base.html.twig' %}

{% block main %}

<main id="create-article">

    <h1 class="page-title">Cr√©er un article</h1>

    <form method="POST" class="article-form">

        <div class="form-group">
            <label for="title">Titre</label>
            <input type="text" id="title" name="title" class="input-field" value="{{ article.title }}">
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" id="description" name="description" class="input-field" value="{{ article.description}}">
        </div>

        <div class="form-group">
            <label for="content">Contenu</label>
            <textarea id="content" name="content" class="textarea-field">{{article.content}}</textarea>
        </div>

        <div class="form-group">
            <label for="image">Image</label>
            <input type="text" id="image" name="image" class="input-field" value="{{ article.image}}">
        </div>

        <input type="submit" value="Envoyer" class="submit-btn" onclick="confirmUpdate('{{ article.id }}')">
        <!--j'ajoute la fonction onclick pour confirmer la supression via javascript-->

    </form>

</main>

{% endblock main %}